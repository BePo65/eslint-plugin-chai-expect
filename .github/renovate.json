{
  "extends": [
    "config:js-lib",
    ":automergePatch",
    ":automergeLinters",
    ":automergeTesters",
    ":dependencyDashboard",
    ":maintainLockFilesWeekly",
    ":semanticCommitsDisabled"
  ],
  "packageRules": [
    {
      "matchCurrentVersion": ">= 1.0.0",
      "updateTypes": ["minor"],
      "automerge": true
    },
    {
      "matchPackageNames": ["eslint"],
      "allowedVersions": "/^8\\.[0-9]+\\.[0-9]+$/"
    },
    {
      "matchPackageNames": ["chai"],
      "allowedVersions": "/^4\\.[0-9]+\\.[0-9]+$/"
    }
  ]
}
